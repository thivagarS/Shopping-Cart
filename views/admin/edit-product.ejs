<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="<% if(editable) { %>/admin/edit-product<% } else { %>/admin/add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value = "<% if(editable) { %> <%= product.title %> <% } %>">
            </div>
            <div class="form-control">
                <label for="image">Image URL</label>
                <input type="file" name="image" id="image" value = "<% if(editable) { %> <%= product.imageUrl %> <% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value = "<% if(editable) { %> <%= product.price %> <% } %>" autocomplete="off">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" value = "<% if(editable) { %> <%= product.description %> <% } %>"></textarea>
            </div>
            <% if (editable) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><% if(editable) { %> Update Product <% } else { %> Add Product <% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>